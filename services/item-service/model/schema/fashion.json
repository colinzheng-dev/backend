{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://veganapi.com/fashion-schema.json",
  "title": "fashion",
  "extends": "product",
  "description": "Attributes for a fashion product item",
  "type": "object",
  "properties": {
    "sku": {
    "description": "Stock control identifier",
    "type": "string"
  },
    "hs_code": {
      "description": "Harmonized System product code",
      "type": "string",
      "pattern": "[0-9]{4}\\.[0-9]{2}"
    },
    "barcode": {
      "description": "Product barcode",
      "type": "string"
    }
  },
  "required": []
}
