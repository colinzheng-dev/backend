{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://veganapi.com/question-schema.json",
  "title": "question",
  "description": "Attributes for a question post type",
  "type": "object",
  "properties": {
    "content": {
      "description": "Textual content of the review",
      "type": "string"
    },
    "user_bought": {
      "description": "Flag that states if the user bought the item being reviewed.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["content"],
  "additionalProperties": false
}
