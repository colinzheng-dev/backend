{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://veganapi.com/reply-fixed-schema.json",
  "title": "reply-fixed",
  "description": "Fixed fields for a reply",
  "type": "object",
  "properties": {
    "parent_id": {
      "type": "string"
    },
    "is_edited": {
      "type": "boolean"
    },
    "is_deleted": {
      "type": "boolean"
    },
    "pictures": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 0
    }
  },
  "required": ["parent_id"],
  "additionalProperties": true
}
