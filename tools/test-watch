#!/bin/bash
echo '--------------------------------------------------------------------------'
go test -v $* | sed ''/PASS/s//$(printf "\033[32mPASS\033[0m")/'' | sed ''/FAIL/s//$(printf "\033[1m\033[31mFAIL\033[0m")/''
echo '-- DONE --------------------------------------------------------------------'
reflex -r '\.go$' -- bash -c "echo '---------------------------------------------------------------------------'; go test -v $* | sed ''/PASS/s//$(printf \"\\033[32mPASS\\033[0m\")/'' | sed ''/FAIL/s//$(printf \"\\033[1m\\033[31mFAIL\\033[0m\")/''; echo '-- DONE --------------------------------------------------------------------'"
